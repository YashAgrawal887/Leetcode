#include <stdbool.h>

bool isPerfectSquare(int num) {
    if (num < 1) {
        return false;
    }
    
    
    for (int i = 1; i <= 46340; i++) {
        int square = i * i;
        if (square == num) {
            return true;
        }
        if (square > num) {
            return false;
        }
    }
    
    
    return false;
}
